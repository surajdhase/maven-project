pipeline {
    agent any

    stages 
    {  
        
        stage ('Cloning Code') {
		steps {
          		git 'https://github.com/prakashk0301/maven-project'
         	}
	}
	
        stage ('Compile My Project') {

            steps {
                withMaven(jdk: 'Local JDK', maven: 'Apache Maven')
                {
                    sh 'mvn compile'
                }
                  }
                                 
        }
	stage ('Test My Project') {


            steps {
                withMaven(jdk: 'Local JDK', maven: 'Apache Maven')
                {
                    sh 'mvn test'
                }
                  }
                                 
        }
		}
		}
